            label( for="birthDay").formbold-form-label Date of Birth 
            input( type="date" name="birthDay")#birthDay.formbold-form-input
  
        div.formbold-mb-3
          label( for="address").formbold-form-label Address
          input(type="text" name="address")#address.formbold-form-input
  
