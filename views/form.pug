            input( type="text" name="neighborhood")#neighborhood.formbold-form-input
  
        div.formbold-mb-3
          label(for="amount").formbold-form-label What Is Your Investment Amount?
          input( type="text" name="amount" )#amount.formbold-form-input
          
          label(for="choosing").formbold-form-label What Is The Reason For Choosing Lokumcu Baba?
          textarea(rows="4" name="choosing")#choosing.formbold-form-input
          label(for="added").formbold-form-label Want To Add
